datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  MultiNoun     MultiNoun[]
  MultiSentence MultiSentence[]
}

model MultiNoun {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  nouns      Noun[]
  Category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?   @db.ObjectId
}

model Noun {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  language        String
  singularArticle String?
  singular        String
  pluralArticle   String?
  plural          String
  multiNoun       MultiNoun @relation(fields: [multiNounId], references: [id])
  multiNounId     String    @db.ObjectId
}

model MultiSentence {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  sentences  Sentence[]
  Category   Category?  @relation(fields: [categoryId], references: [id])
  categoryId String?    @db.ObjectId
}

model Sentence {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  language        String
  sentence        String
  multiSentence   MultiSentence @relation(fields: [multiSentenceId], references: [id])
  multiSentenceId String        @db.ObjectId
}
